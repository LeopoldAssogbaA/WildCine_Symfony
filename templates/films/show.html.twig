{% extends 'base.html.twig' %}

{% block title films.titre %}

{% block body %}
  <div class="jumbotron">
    <div class="container">
      <div class="row">
        <div class="col-md-8">

        </div>
        <div class="col-md-4">
          <h1>{{ films.titre }}</h1>
          <h2> De {{ films.realisateur }}</h2>
          <h2> avec {{ films.acteurs }}</h2>
          <h3> Genre:  {{ films.genreType }} </h3>
          <a href="{{ films.bandeAnnonce }}" class="btn btn-primary">Bande Annonce</a>
        </div>
      </div>
    </div>
  </div>
  <div class="container mt-4">
    <h2>Synopsis: </h2>
    <p>
      {{ films.description | nl2br }}
    </p>

    <div class="row">
      <div class="col-md-8">
        <h2>Fiche du Film</h2>
        <table class="table table-striped">
          <tr>
            <td>Titre</td>
            <td>{{ films.titre }} </td>
          </tr>
          <tr>
            <td>Genre</td>
            <td>{{ films.genreType }}</td>
          </tr>
          <tr>
            <td>Realisateur</td>
            <td>{{ films.realisateur }}</td>
          </tr>
          <tr>
            <td>Acteurs</td>
            <td>{{ films.acteurs }}</td>
          </tr>
          <tr>
            <td>Pays</td>
            <td>{{ films.pays }}</td>
          </tr>
        </table>
      </div>
      <div class="col-md-4">

      </div>
    </div>
  </div>
{% endblock %}
